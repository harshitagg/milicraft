<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Text:</strong>
  <%= @post.text %>
</p>

<h3>Add comment:</h3>
<%= render 'comments/form' %>

<h3>Comments</h3>
<% if @post.comments.empty? %>
    <strong>No comments</strong>
<% end %>

<% @post.comments.each do |comment| %>
    <p>
      User email:
      <%= comment.email %>
    </p>

    <p>
      Comment:
      <%= comment.body %>
    </p>
<% end %>

<%= link_to 'Edit Post', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>
