<p id="notice"><%= notice %></p>

<p>
  <strong>Title:</strong>
  <%= @post.title %>
</p>

<p>
  <strong>Content:</strong>
  <%= @post.content %>
</p>

<%= link_to 'Edit', edit_post_path(@post) %> |
<%= link_to 'Back', posts_path %>

<br>

<ul>
  <li><%= link_to 'Add comment', new_comment_path %></li>
  <% @post.comments.each do |comment| %>
      <li><%= comment.content %>, by <%= comment.email %></li>
  <% end %>
</ul>
